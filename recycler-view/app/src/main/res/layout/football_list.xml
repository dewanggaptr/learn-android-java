<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/football_image"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arema_description" />

    <TextView
        android:id="@+id/football_name"
        android:layout_toRightOf="@id/football_image"
        android:layout_marginBottom="8dp"
        style="@style/football_name_style"
        android:layout_toEndOf="@id/football_image" />

    <TextView
        android:id="@+id/football_description"
        android:layout_toRightOf="@id/football_image"
        android:layout_below="@id/football_name"
        style="@style/football_description_style"
        android:layout_toEndOf="@id/football_image" />

</RelativeLayout>